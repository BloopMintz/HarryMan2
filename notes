#DEFINES               this is 8^    12^



define :introbeat1 do
  1.times do
    use_synth :sine
    play :b3, amp: 0.5
    play :g3, amp: 0.5
    play :b2, amp: 0.5
    sleep 0.8
    
    play :a3, amp: 0.5
    play :e3, amp: 0.5
    play :a2, amp: 0.5
    sleep 1.2
    
    play :g3, amp: 0.5
    play :d3, amp: 0.5
    play :g2, amp: 0.5
    sleep 0.8
    
    play :a3, amp: 0.5
    play :e3, amp: 0.5
    play :a2, amp: 0.5
    sleep 1.1
  end
  1.times do
    use_synth :rodeo
    play :b3, amp: 0.35
    play :g3, amp: 0.35
    play :b2, amp: 0.35
    sleep 0.8
    
    play :a3, amp: 0.35
    play :e3, amp: 0.35
    play :a2, amp: 0.35
    sleep 1.2
    
    play :g3, amp: 0.35
    play :d3, amp: 0.35
    play :g2, amp: 0.35
    sleep 0.8
    
    play :a3, amp: 0.35
    play :e3, amp: 0.35
    play :a2, amp: 0.35
    sleep 1.1
  end
end


define :introbeat2 do
  4.times do
    use_synth :pulse
    play :b3, amp: 0.35
    play :g3, amp: 0.35
    play :b2, amp: 0.35
    sleep 0.8
    
    play :a3, amp: 0.35
    play :e3, amp: 0.35
    play :a2, amp: 0.35
    sleep 1.2
    
    play :g3, amp: 0.35
    play :d3, amp: 0.35
    play :g2, amp: 0.35
    sleep 0.8
    
    play :a3, amp: 0.35
    play :e3, amp: 0.35
    play :a2, amp: 0.35
    sleep 1.1
  end
end

define :introbeat3 do
  use_synth :pulse
  play :b3, amp: 0.5
  play :g3, amp: 0.5
  play :b2, amp: 0.5
  sleep 0.8
  
  play :a3, amp: 0.5
  play :e3, amp: 0.5
  play :a2, amp: 0.5
  sleep 1.2
  
  play :g3, amp: 0.5, sustain: 2
  play :d3, amp: 0.35, sustain: 2
  play :g2, amp: 0.215, sustain: 2
  sleep 0.8
end

