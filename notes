c=9

define :picky do |who|
  sample who
  if c < 10
    introbeat1
  elsif c == 11
    introbeat3
    stop
  else
    introbeat2n
  end
  
  sleep 0
  print("newloop!") #this msg indicates when a new loop plays
  c = c + 1
end

live_loop :daydream do
  picky :introbeats
end

sleep 6.5


live_loop :lala do
  sample pella[x]
  sleep snore[x]
  x=x+1
end
x=0

sleep 21

live_loop :intro2 do
  introbeat4
  sleep 0
  introbeat5
  sleep 0
  stop
end
sleep 0.5

use_bpm 114

define :guitar do |harry, styles|
  play harry
  sleep styles
end

define :guitar2 do
  live_loop :guitar3 do
    use_synth :pretty_bell
    guitar :a2, 0.5
    guitar :a3, 0.5
    guitar :a1, 1
    guitar :b1, 1
    guitar :b1, 0.5
  end
end



if r==5
  live_loop :guitar5 do
    guitar2
    sleep 5
  end
end

